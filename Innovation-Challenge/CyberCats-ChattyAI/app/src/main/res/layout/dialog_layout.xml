<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sp_dialog"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingHorizontal="10dp"
    android:paddingVertical="25dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认删除会话？"
        android:textColor="#F9FAFA"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="删除后就无法找回了"
        android:textColor="#919BA1"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="130dp"
            android:layout_height="48dp"
            android:background="@drawable/sp_cancel"
            android:text="取消"
            android:textColor="#F1F2F3" />


        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="130dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/sp_btn"
            android:text="确认"
            android:textColor="#F1F2F3" />
    </LinearLayout>

</LinearLayout>